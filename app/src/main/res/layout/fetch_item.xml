<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:paddingLeft="10dp">


    <TextView
        android:id="@+id/id_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/preId_TV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listId_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/prelistId_TV"
        app:layout_constraintTop_toBottomOf="@+id/id_TV" />

    <TextView
        android:id="@+id/name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/prename_TV"
        app:layout_constraintTop_toBottomOf="@+id/listId_TV" />

    <TextView
        android:id="@+id/preId_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/prelistId_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preId_TV"
        android:paddingRight="5dp"/>

    <TextView
        android:id="@+id/prename_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prelistId_TV"
        android:paddingRight="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>